{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "KOMPILACE VESMIRU",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-static",
                "-static-libgcc",
                "-static-libstdc++",
                "-g",
                "-O3",
                "-march=native",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "current": true
            },
            "detail": "Kompilátor g++ s turbo optimalizací"
        }
    ]
}